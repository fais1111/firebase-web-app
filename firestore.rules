/**
 * @file Firestore Security Rules
 * @version 2
 *
 * @description This ruleset allows completely open access to all data for rapid prototyping.
 *              It disables all security checks, effectively making the database public.
 *              THIS IS FOR DEVELOPMENT AND TESTING PURPOSES ONLY. DO NOT DEPLOY TO PRODUCTION.
 *
 * @security WARNING: These rules grant full read and write access to everyone.
 *             This should NEVER be used in a production environment.
 */
rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    /**
     * @description Allows any user to read or write user profiles.
     * @path /users/{userId}
     * @allow (get, list, create, update, delete) - Any user can perform any operation.
     * @principle DEVELOPMENT-ONLY: Open access for prototyping.
     */
    match /users/{userId} {
      allow get, list, create, update, delete: if true;
    }

    /**
     * @description Allows any user to read or write accident reports.
     * @path /accident_reports/{reportId}
     * @allow (get, list, create, update, delete) - Any user can perform any operation.
     * @principle DEVELOPMENT-ONLY: Open access for prototyping.
     */
    match /accident_reports/{reportId} {
      allow get, list, create, update, delete: if true;
    }

    /**
     * @description Allows any user to read or write admin locations.
     * @path /admin_locations/{locationId}
     * @allow (get, list, create, update, delete) - Any user can perform any operation.
     * @principle DEVELOPMENT-ONLY: Open access for prototyping.
     */
    match /admin_locations/{locationId} {
      allow get, list, create, update, delete: if true;
    }

    /**
     * @description Allows any user to read or write accident guides.
     * @path /accident_guides/{guideId}
     * @allow (get, list, create, update, delete) - Any user can perform any operation.
     * @principle DEVELOPMENT-ONLY: Open access for prototyping.
     */
    match /accident_guides/{guideId} {
      allow get, list, create, update, delete: if true;
    }
  }
}