
{
  "entities": {
    "UserProfile": {
      "$schema": "http://json-schema.org/draft-07/schema#",
      "title": "User",
      "type": "object",
      "description": "Represents a user of the application.",
      "properties": {
        "uid": { "type": "string" },
        "email": { "type": "string", "format": "email" },
        "displayName": { "type": "string" },
        "photoURL": { "type": "string", "format": "uri" },
        "createdAt": { "type": "string", "format": "date-time" }
      },
      "required": ["uid", "email", "createdAt"]
    },
    "AccidentReport": {
      "$schema": "http://json-schema.org/draft-07/schema#",
      "title": "AccidentReport",
      "type": "object",
      "description": "Represents a user-submitted accident report.",
      "properties": {
        "userId": { "type": "string" },
        "userEmail": { "type": "string" },
        "reportDate": { "type": "string", "format": "date-time" },
        "description": { "type": "string" },
        "locationDescription": { "type": "string" },
        "status": {
          "type": "string",
          "enum": ["reported", "approved", "denied"]
        }
      },
      "required": ["userId", "reportDate", "description", "locationDescription", "status"]
    },
    "AdminLocation": {
      "$schema": "http://json-schema.org/draft-07/schema#",
      "title": "AdminLocation",
      "type": "object",
      "description": "Represents a location and accident type added by an administrator.",
      "properties": {
        "name": { "type": "string" },
        "description": { "type": "string" }
      },
      "required": ["name", "description"]
    }
  },
  "auth": {
    "providers": ["password", "google.com"]
  },
  "firestore": {
    "collections": [
      {
        "path": "/users/{userId}",
        "schema": { "$ref": "#/entities/UserProfile" },
        "description": "Stores public profiles for users."
      },
      {
        "path": "/accident_reports/{reportId}",
        "schema": { "$ref": "#/entities/AccidentReport" },
        "description": "Stores all accident reports from all users."
      },
      {
        "path": "/admin_locations/{locationId}",
        "schema": { "$ref": "#/entities/AdminLocation" },
        "description": "Stores accident hotspots curated by administrators."
      }
    ]
  }
}
