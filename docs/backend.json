
{
  "entities": {
    "UserProfile": {
      "$schema": "http://json-schema.org/draft-07/schema#",
      "title": "User",
      "type": "object",
      "description": "Represents a user of the application.",
      "properties": {
        "uid": { "type": "string" },
        "email": { "type": "string", "format": "email" },
        "displayName": { "type": "string" },
        "photoURL": { "type": "string", "format": "uri" },
        "createdAt": { "type": "string", "format": "date-time" }
      },
      "required": ["uid", "email", "createdAt"]
    },
    "AccidentReport": {
      "$schema": "http://json-schema.org/draft-07/schema#",
      "title": "AccidentReport",
      "type": "object",
      "description": "Represents a user-submitted accident report.",
      "properties": {
        "userId": { "type": "string" },
        "userEmail": { "type": "string" },
        "reportDate": { "type": "string", "format": "date-time" },
        "description": { "type": "string" },
        "locationDescription": { "type": "string" },
        "status": {
          "type": "string",
          "enum": ["reported", "approved", "denied"]
        }
      },
      "required": ["userId", "reportDate", "description", "locationDescription", "status"]
    },
    "AdminLocation": {
      "$schema": "http://json-schema.org/draft-07/schema#",
      "title": "AdminLocation",
      "type": "object",
      "description": "Represents a location and accident type added by an administrator.",
      "properties": {
        "name": { "type": "string" },
        "description": { "type": "string" }
      },
      "required": ["name", "description"]
    },
    "AccidentGuide": {
      "$schema": "http://json-schema.org/draft-07/schema#",
      "title": "AccidentGuide",
      "type": "object",
      "description": "Represents a guide for accident management, including a YouTube link.",
      "properties": {
        "title": { "type": "string" },
        "description": { "type": "string" },
        "youtubeUrl": { "type": "string", "format": "uri" }
      },
      "required": ["title", "description", "youtubeUrl"]
    },
    "Therapist": {
      "$schema": "http://json-schema.org/draft-07/schema#",
      "title": "Therapist",
      "type": "object",
      "description": "Represents a therapist or doctor who can be booked for appointments.",
      "properties": {
        "uid": { "type": "string" },
        "name": { "type": "string" },
        "email": { "type": "string", "format": "email" },
        "specialization": { "type": "string" },
        "description": { "type": "string" },
        "photoURL": { "type": "string", "format": "uri" },
        "status": {
          "type": "string",
          "enum": ["pending", "approved"]
        },
        "createdAt": { "type": "string", "format": "date-time" }
      },
      "required": ["uid", "name", "email", "specialization", "status", "createdAt"]
    },
    "Appointment": {
      "$schema": "http://json-schema.org/draft-07/schema#",
      "title": "Appointment",
      "type": "object",
      "description": "Represents a booking made by a user with a therapist.",
      "properties": {
        "userId": { "type": "string" },
        "therapistId": { "type": "string" },
        "userName": { "type": "string" },
        "userEmail": { "type": "string" },
        "problemDescription": { "type": "string" },
        "appointmentDate": { "type": "string", "format": "date-time" },
        "status": {
          "type": "string",
          "enum": ["requested", "confirmed", "completed", "cancelled"]
        }
      },
      "required": ["userId", "therapistId", "problemDescription", "appointmentDate", "status"]
    },
    "MentalHealthResource": {
      "$schema": "http://json-schema.org/draft-07/schema#",
      "title": "MentalHealthResource",
      "type": "object",
      "description": "Represents an article or video for mental health support.",
      "properties": {
        "title": { "type": "string" },
        "description": { "type": "string" },
        "type": {
          "type": "string",
          "enum": ["article", "video"]
        },
        "url": { "type": "string", "format": "uri" }
      },
      "required": ["title", "description", "type", "url"]
    }
  },
  "auth": {
    "providers": ["password", "google.com"]
  },
  "firestore": {
    "collections": [
      {
        "path": "/users/{userId}",
        "schema": { "$ref": "#/entities/UserProfile" },
        "description": "Stores public profiles for users."
      },
      {
        "path": "/accident_reports/{reportId}",
        "schema": { "$ref": "#/entities/AccidentReport" },
        "description": "Stores all accident reports from all users."
      },
      {
        "path": "/admin_locations/{locationId}",
        "schema": { "$ref": "#/entities/AdminLocation" },
        "description": "Stores accident hotspots curated by administrators."
      },
      {
        "path": "/accident_guides/{guideId}",
        "schema": { "$ref": "#/entities/AccidentGuide" },
        "description": "Stores accident management guides with YouTube links."
      },
      {
        "path": "/therapists/{therapistId}",
        "schema": { "$ref": "#/entities/Therapist" },
        "description": "Stores information about registered therapists."
      },
      {
        "path": "/appointments/{appointmentId}",
        "schema": { "$ref": "#/entities/Appointment" },
        "description": "Stores appointments booked by users."
      },
      {
        "path": "/mental_health_resources/{resourceId}",
        "schema": { "$ref": "#/entities/MentalHealthResource" },
        "description": "Stores articles and videos for mental health support."
      }
    ]
  }
}
